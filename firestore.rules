rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null && 
        request.auth.token.role == 'Admin';
    }

    function isCreator() {
      return request.auth != null && 
        request.auth.token.role == 'Creator';
    }

    function isAdminOrCreator() {
      return request.auth != null && 
        (request.auth.token.role == 'Admin' || request.auth.token.role == 'Creator');
    }

    // Allow read to authenticated users
    match /tours/{tourId} {
      allow read: if request.auth != null;
      allow create: if isAdminOrCreator();
      allow update, delete: if isAdminOrCreator() && 
        (isAdmin() || resource.data.createdBy == request.auth.uid);
    }

    match /users/{userId} {
      allow read: if request.auth != null && 
        (request.auth.uid == userId || isAdmin());
      allow create: if request.auth != null && 
        (request.auth.uid == userId || isAdmin());
      allow update, delete: if request.auth != null && isAdmin();
    }

    match /cities/{cityId} {
      allow read: if request.auth != null;
      allow write: if isAdminOrCreator();
    }

    // Customer Pages - Allow admins and creators to manage
    match /customerPages/{pageId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isAdminOrCreator();
    }

    // Menus - Allow admins and creators to manage
    match /menus/{menuId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isAdminOrCreator();
    }

    // Site Configuration - Allow admins and creators to manage
    match /siteConfig/{configId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isAdminOrCreator();
    }

    // Default: deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
